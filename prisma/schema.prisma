generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  kindeId String @map("kinde_id")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  email     String? @unique
  image     String? @default("placeholder.jpg")

  Invoice Invoice[]

  @@map("users")
}

model Invoice {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  slug String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  issued       String
  paymentDue   String
  paymentTerms Int

  description String
  status      String? @default("pending")

  senderAddress Address

  clientName    String
  clientEmail   String
  clientAddress Address

  items InvoiceItem[]
  total Float

  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String? @db.ObjectId

  @@map("invoices")
}

type InvoiceItem {
  id       String
  name     String
  quantity Int
  price    Float
  total    Float
}

type Address {
  street   String
  city     String
  postCode String
  country  String
}
