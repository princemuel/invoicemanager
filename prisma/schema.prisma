// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  authId String @unique @map("auth_id")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  email     String? @unique
  image     String? @default("placeholder.jpg")

  Invoice Invoice[]

  @@map("users")
}

model Invoice {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slug       String?  @unique
  paymentDue DateTime

  paymentTerms Int
  status       String? @default("pending")
  total        Float

  clientName    String
  clientEmail   String
  clientAddress Address
  senderAddress Address

  issued      DateTime
  description String
  items       InvoiceItem[]

  user   User?   @relation(fields: [userId], references: [authId], onDelete: Cascade)
  userId String?

  @@map("invoices")
}

type InvoiceItem {
  id       String
  name     String
  quantity Int
  price    Float
  total    Float
}

type Address {
  street   String
  city     String
  postCode String
  country  String
}
