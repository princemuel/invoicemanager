// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  firstName String?
  lastName  String?
  email     String    @unique
  password  String?
  photo     String?
  invoices  Invoice[]

  @@map("users")
}

model Invoice {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  tag           String
  paymentDue    String
  description   String
  paymentTerms  Int
  clientName    String
  clientEmail   String
  status        Status        @default(PENDING)
  senderAddress Address
  clientAddress Address
  items         InvoiceItem[]
  total         Float
  user          User?         @relation(fields: [userId], references: [id])
  userId        String?       @db.ObjectId

  @@map("invoices")
}

type Address {
  street   String
  city     String
  postCode String
  country  String
}

type InvoiceItem {
  itemId   String
  name     String
  quantity Int
  price    Float
  total    Float
}

enum Status {
  DRAFT
  PENDING
  PAID
}
